<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <!-- Handler -->
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="Rsace.commands.category"
            id="Rsace.commands.sync"
            name="Synchronize">
      </command>   
      <command
            categoryId="Rsace.commands.category"
            id="Rsace.commands.syncSession"
            name="Open Remote Session">
      </command>
      <command
            categoryId="Rsace.commands.category"
            id="Rsace.commands.developerTeam"
            name="Add Developers to Team">
      </command>
      <command
            categoryId="Rsace.commands.category"
            id="Rsace.commands.developer"
            name="Invite a Developer as Guest">
      </command>
      
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.jocdev.rsace.handlers.InitHandler"
            commandId="Rsace.commands.sync">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.jocdev.rsace.handlers.InitHandler"
            commandId="Rsace.commands.syncSession">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.jocdev.rsace.handlers.InitHandler"
            commandId="Rsace.commands.developerTeam">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.jocdev.rsace.handlers.InitHandler"
            commandId="Rsace.commands.developer">
      </handler>
   </extension>
   <!-- Menu -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=additions">
            <menu label="Sync with Rsace">
            <command
                  commandId="Rsace.commands.sync"
                  style="push"
                  icon="icons/syn.png">
                  <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*.java" />
				             </adapt>
				            </iterate>
				           </with>
         			</visibleWhen>
         			
            </command>
            <command
              commandId="Rsace.commands.syncSession"
              style="push">
              <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*_sync.java" />
				             </adapt>
				            </iterate>
				           </with>
         			</visibleWhen>
             </command>
            <command
              commandId="Rsace.commands.developerTeam"
              style="push">
              <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*_sync.java" />
				             </adapt>
				            </iterate>
				           </with>
         			</visibleWhen>
             </command>
            <command
              commandId="Rsace.commands.developer"
              style="push">
              <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*_sync.java" />
				             </adapt>
				            </iterate>
				           </with>
         			</visibleWhen>
            </command>
       </menu>
  </menuContribution>   
  </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.jocdev.rsace.preferences.RsacePreferencesPage"
            id="com.joeddev.rsace.preferences.RsacePreferences"
            name="Rsace">
           
      </page>
      <page
            class="com.jocdev.rsace.preferences.DVTPreferencesPage"
            id="com.joeddev.rsace.preferences.RsacePreferences"
            name="Developers Team"
            category="com.joeddev.rsace.preferences.RsacePreferences">
           
      </page>
      <page
            class="com.jocdev.rsace.preferences.RemotePreferencesPage"
            id="com.joeddev.rsace.preferences.RsacePreferences"
            name="Remote Sessions"
            category="com.joeddev.rsace.preferences.RsacePreferences">
           
      </page>
      
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.jocdev.rsace.preferences.PreferenceInitializer">
      </initializer>
   </extension>
</plugin>
